---
import Layout from "../layouts/Layout.astro";
import Demo from "../components/Demo.astro";
---

<Layout title="Welcome to EN.">
  <main class="mx-auto max-w-[800px] rounded-md px-4 py-8">
    <h1
      class="mb-8 text-center text-4xl font-bold md:text-6xl dark:text-neutral-100"
    >
      Welcome to <span class="bg-gradient-to-r from-blue-500 to-purple-500"
        >EN</span
      >
    </h1>
    <div class="prose mx-auto mb-8 dark:prose-invert">
      <p>
        To get started, open the directory <code
          class="rounded bg-gray-100 px-1 py-0.5 font-mono dark:bg-neutral-700"
          >src/pages</code
        >
        in your project.
      </p>
      <p>
        <strong>Code Challenge:</strong> Tweak the "Welcome to Astro" message above.
      </p>
    </div>

    <!-- Collections List -->
    <Demo />
  </main>
</Layout>
